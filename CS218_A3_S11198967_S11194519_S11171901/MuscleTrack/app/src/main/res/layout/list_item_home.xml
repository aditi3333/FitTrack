<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginHorizontal="8dp"
    android:paddingTop="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/Workout_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        app:cardBackgroundColor="@color/cardColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/lato"
                android:text="Weight:"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/icon_top"
                app:layout_constraintEnd_toStartOf="@+id/lblWeight"
                app:layout_constraintTop_toBottomOf="@+id/lblExercise" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lato"
                android:text="Sets:"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/icon_top"
                app:layout_constraintEnd_toStartOf="@+id/lblSets"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/lato"
                android:text="Reps:"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/icon_top"
                app:layout_constraintEnd_toStartOf="@+id/lblReps"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/lblExercise"
                android:layout_width="200dp"
                android:textAlignment="center"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="96dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblWeight"
                android:textAlignment="center"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="76dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblExercise" />

            <TextView
                android:id="@+id/lblSets"
                android:layout_width="120dp"
                android:textAlignment="center"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="@+id/lblWeight"
                app:layout_constraintStart_toStartOf="@+id/lblWeight"
                app:layout_constraintTop_toBottomOf="@+id/lblWeight" />

            <TextView
                android:id="@+id/lblReps"
                android:layout_width="120dp"
                android:textAlignment="center"
                android:layout_height="30dp"
                android:layout_marginTop="11dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="@+id/lblSets"
                app:layout_constraintStart_toStartOf="@+id/lblSets"
                app:layout_constraintTop_toBottomOf="@+id/lblSets" />

            <ImageView
                android:id="@+id/menuOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_more" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>